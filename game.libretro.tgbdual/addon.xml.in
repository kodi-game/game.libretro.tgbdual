<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.tgbdual"
		name="Nintendo - Game Boy / Color (TGB Dual)"
		version="0.8.3.23"
		provider-name="GIGO, Hii">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gameboy" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>gb|gbc</platforms>
		<extensions>gb|dmg|gbc|cgb|sgb</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.tgbdual</source>
		<assets>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<summary lang="en_GB">Nintendo - Game Boy / Color (TGB Dual) v0.8.3</summary>
		<description lang="da_DK">TGB Dual er en open source GB/GBC-emulator med game link-kabelunderstøttelse.</description>
		<description lang="en_GB">TGB Dual is an open source GB/GBC emulator with game link cable support.</description>
		<description lang="ko_KR">TGB Dual은 게임 링크 케이블을 지원하는 오픈 소스 GB/GBC 에뮬레이터입니다.</description>
	</extension>
</addon>
